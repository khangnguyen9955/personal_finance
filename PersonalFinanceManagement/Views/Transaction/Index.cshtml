@model  PersonalFinanceManagement.ViewModels.TransactionViewModel

<h1>Transaction History</h1>

<p>Total Income: @Model.TotalIncome.ToString("C")</p>
<p>Total Spending: @Model.TotalSpending.ToString("C")</p>
<p>Total Profit: @Model.TotalProfit.ToString("C")</p>

<hr>

<h2>Add a new transaction</h2>

@using (Html.BeginForm("Create", "Transaction"))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="type">Transaction Type:</label>
        <select class="form-control" id="type" name="transactionType">
            <option value="income">Income</option>
            <option value="spending">Spending</option>
        </select>
    </div>

    <div class="form-group">
        <label for="category">Category:</label>
        <select class="form-control" id="category" name="categoryId">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="text" class="form-control" id="amount" name="amount" placeholder="Enter amount">
    </div>

    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Enter description">
    </div>
    
    <div class="form-group">
        <label for="date">Date:</label>
        <input type="text" class="form-control" id="date" name="date">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

<hr>

<h2>Transaction List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Description</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var income in Model.Incomes)
        {
            <tr>
                <td>Income</td>
                <td>@income.Description</td>
                <td>@income.Category.Name</td>
                <td>@income.Amount.ToString("C")</td>
                <td>@income.Date.ToShortDateString()</td>
            </tr>
        }

        @foreach (var spending in Model.Spendings)
        {
            <tr>
                <td>Spending</td>
                <td>@spending.Description</td>
                <td>@spending.Category.Name</td>
                <td>@spending.Amount.ToString("C")</td>
                <td>@spending.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
